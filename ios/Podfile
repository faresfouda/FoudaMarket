source 'https://github.com/CocoaPods/Specs.git'
source 'https://cdn.cocoapods.org/'

platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter build ios is executed first."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting the file and running flutter build ios."
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

# Pre-install hook to ensure proper setup
pre_install do |installer|
  puts "üîß Pre-install: Setting up Firebase configuration..."
  # Ensure GoogleService-Info.plist exists
  google_service_path = File.join(File.dirname(__FILE__), 'Runner', 'GoogleService-Info.plist')
  unless File.exist?(google_service_path)
    puts "‚ö†Ô∏è  Warning: GoogleService-Info.plist not found at #{google_service_path}"
  else
    puts "‚úÖ GoogleService-Info.plist found at #{google_service_path}"
  end
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Ensure all targets use the same deployment target
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      
      # Fix for Xcode 15 compatibility
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'PERMISSION_CAMERA=1',
        'PERMISSION_PHOTOS=1',
        'PERMISSION_LOCATION=1',
        'PERMISSION_NOTIFICATIONS=1',
        'PERMISSION_MICROPHONE=1',
        'PERMISSION_SPEECH_RECOGNIZER=1',
        'PERMISSION_MEDIA_LIBRARY=1',
        'PERMISSION_SENSORS=1',
        'PERMISSION_BLUETOOTH=1',
        'PERMISSION_APP_TRACKING_TRANSPARENCY=1',
        'PERMISSION_CRITICAL_ALERTS=1',
        'PERMISSION_TV=1',
        'PERMISSION_APPLE_MUSIC=1',
        'PERMISSION_CALENDAR=1',
        'PERMISSION_CONTACTS=1',
        'PERMISSION_HEALTH=1',
        'PERMISSION_HOME_KIT=1',
        'PERMISSION_MOTION=1',
        'PERMISSION_REMINDERS=1',
        'PERMISSION_SIRI=1',
        'PERMISSION_FACE_ID=1',
      ]
      
      # Additional build settings for better compatibility
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['SWIFT_VERSION'] = '5.0'
      
      # Fix for unsupported option '-G' error - More aggressive approach
      config.build_settings['OTHER_CFLAGS'] = '$(inherited)'
      config.build_settings['OTHER_CPLUSPLUSFLAGS'] = '$(inherited)'
      
      # Remove any problematic compiler flags that cause simulator build issues
      if config.build_settings['OTHER_CFLAGS'].include?('-G')
        config.build_settings['OTHER_CFLAGS'] = config.build_settings['OTHER_CFLAGS'].gsub(/-G\S*\s*/, '')
      end
      if config.build_settings['OTHER_CPLUSPLUSFLAGS'].include?('-G')
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = config.build_settings['OTHER_CPLUSPLUSFLAGS'].gsub(/-G\S*\s*/, '')
      end
      
      # Additional aggressive fixes for -G flag issues
      config.build_settings['GCC_OPTIMIZATION_LEVEL'] = '0' if config.name == 'Debug'
      config.build_settings['GCC_OPTIMIZATION_LEVEL'] = 's' if config.name == 'Release'
      
      # Ensure no problematic flags are inherited
      config.build_settings['OTHER_CFLAGS'] = config.build_settings['OTHER_CFLAGS'].gsub(/-G\S*\s*/, '').strip
      config.build_settings['OTHER_CPLUSPLUSFLAGS'] = config.build_settings['OTHER_CPLUSPLUSFLAGS'].gsub(/-G\S*\s*/, '').strip
      
      # Additional fixes for simulator compatibility
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
      
      # Ensure proper architecture settings for simulator
      if config.build_settings['SDKROOT'] == 'iphoneos'
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      end
      
      # Fix for Xcode 15+ compatibility
      config.build_settings['DEAD_CODE_STRIPPING'] = 'YES'
      config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
      
      # Firebase-specific fixes
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      config.build_settings['DEFINES_MODULE'] = 'YES'
      
      # Ensure proper module search paths
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= ['$(inherited)']
      config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
      
      # Additional module linking fixes
      config.build_settings['SWIFT_INCLUDE_PATHS'] ||= ['$(inherited)']
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      config.build_settings['CLANG_ENABLE_MODULE_DEBUGGING'] = 'YES'
      
      # Force module map generation
      config.build_settings['DEFINES_MODULE'] = 'YES'
      config.build_settings['SWIFT_INSTALL_OBJC_HEADER'] = 'NO'
      
      # Additional aggressive module fixes
      config.build_settings['CLANG_ENABLE_MODULE_IMPORTS'] = 'YES'
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      config.build_settings['SWIFT_OBJC_INTERFACE_HEADER_NAME'] = ''
      
      # Ensure Firebase modules are properly linked
      if target.name.include?('Firebase') || target.name.include?('cloud_firestore') || target.name.include?('firestore')
        config.build_settings['DEFINES_MODULE'] = 'YES'
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['SWIFT_INSTALL_OBJC_HEADER'] = 'NO'
        config.build_settings['CLANG_ENABLE_MODULE_IMPORTS'] = 'YES'
        puts "üîß Applied Firebase-specific settings to #{target.name}"
      end
      
      # Additional fixes for all targets
      config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'YES'
      config.build_settings['SWIFT_VERSION'] = '5.0'
      
      # Debug information
      puts "üîç Target: #{target.name}, Config: #{config.name}"
      puts "   - DEFINES_MODULE: #{config.build_settings['DEFINES_MODULE']}"
      puts "   - CLANG_ENABLE_MODULES: #{config.build_settings['CLANG_ENABLE_MODULES']}"
    end
  end
end
